name: CI/CD Pipeline - Payment Service

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
      # Step 1: Checkout code
      - name: Checkout Repository
        uses: actions/checkout@v4

      # Step 2: Set up JDK
      - name: Set up Java
        uses: actions/setup-java@v4
        with:
          distribution: 'temurin'
          java-version: '21'

      # Step 3: Build Spring Boot app
      - name: Build with Maven
        run: mvn clean package -DskipTests

      # Step 4: Build Docker image
      - name: Build Docker image
        run: docker build -t ${{ github.repository }}:latest .

      # Step 5: Log in to Docker Hub (requires secrets)
      - name: Login to Docker Hub
        uses: docker/login-action@v3
        with:
          username: ${{ secrets.DOCKERHUB_USERNAME }}
          password: ${{ secrets.DOCKERHUB_TOKEN }}

      # Step 6: Push image to Docker Hub
      - name: Push image
        run: |
          docker tag ${{ github.repository }}:latest ${{ secrets.DOCKERHUB_USERNAME }}/payment-service:latest
          docker push ${{ secrets.DOCKERHUB_USERNAME }}/payment-service:latest

      # Step 7: (Optional) Deploy on remote server
      # You can skip this part for now if running locally.
      # Example if you have SSH access:
      # - name: Deploy to server
      #   uses: appleboy/ssh-action@v0.1.10
      #   with:
      #     host: ${{ secrets.SERVER_IP }}
      #     username: ${{ secrets.SERVER_USER }}
      #     key: ${{ secrets.SSH_PRIVATE_KEY }}
      #     script: |
      #       docker pull ${{ secrets.DOCKERHUB_USERNAME }}/payment-service:latest
      #       docker stop payment || true
      #       docker rm payment || true
      #       docker run -d --name payment \
      #         --network app-network \
      #         -p 8089:8080 \
      #         ${{ secrets.DOCKERHUB_USERNAME }}/payment-service:latest
